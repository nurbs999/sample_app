<% provide(:title, "SIGN UP") %>
<h1>Sign up</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user, local: true) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :email %>
            <%= f.email_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_configurmation, "Confirmation" %>
            <%= f.password_field :password_configurmation %>

            <%= f.submit 'Create account', class: "btn btn-primary" %>
        <% end %>          
    </div>
</div>
